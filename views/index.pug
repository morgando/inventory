extends layout

block content
    select(class="js-example-basic-single" name="state")
        option(value='misc') misc
        option(value='csim') csim
    div.button-container
        div.add-category add category
        div.add-item add item
    div.inventory-container
        div.tab-container
            each category in categories
                div.category-tab.unselected(data=JSON.stringify(category)) #{category.name}
        div.info-container

            div.info-flex.item-description
                p#description-label description
                p#description-content


            div.info-flex.item-quantity 
                p#quantity-label quantity
                p#quantity-content

        div.photo-container
block scripts
    script(src='dist/1.main.js')
    script(src='dist/main.js')




